<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="${midlet.package}"
          android:versionCode="${build}" android:versionName="${version}/${build}/${date}">
    <application android:icon="@drawable/icon" android:label="${project.name}">
        <activity android:name="${midlet.classname}" android:label="${project.name}" android:launchMode="singleInstance"
                android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|fontScale">
            <uses-sdk android:minSdkVersion="3"/>
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>
</manifest>
